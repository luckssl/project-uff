<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    size_hint:(0.2375,0.04)
    canvas.before:
        Color:
            rgba: (252/255.0,173/255.0,54/255.0,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30]

    